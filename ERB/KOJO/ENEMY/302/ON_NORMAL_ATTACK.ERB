; 죽음의 기사의 패턴용 변수
; TCVAR:TARGET:10 = 대사용(사용x)
; TCVAR:TARGET:11 = ?
@c302onNormalAttack
#dim dynamic damageBase

	; todo 죽음의 기사 패턴 작업
	if BASE:TARGET:체력 < MAXBASE:TARGET:체력 / 3 && !TCVAR:TARGET:11
		printFormL %kr(NAME:TARGET, "이", "가")% 땅을 크게 울려, %kr(CALLNAME:MASTER, "은", "는")% 균형감각을 잃었다
		printFormL %CALLNAME:MASTER%에게 3턴간 이동불가 적용

		call applyBuffTo(MASTER, "속박", 3)
		TCVAR:TARGET:11 = 1
	else
		printFormL %NAME:TARGET%의 공격
		damageBase = 10 * MAX(1, getActualAtk(TARGET) - getActualDef(MASTER))
		LOSEBASE:체력 = damageBase * 9 / 10 + RAND:(damageBase / 10)
	endif
