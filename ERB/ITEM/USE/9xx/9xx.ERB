; 미약
@use901(targetIdx)
#dim dynamic targetIdx

	printFormL %CALLNAME:targetIdx%에게 %kr(ITEMNAME:901, "을", "를)% 사용했다.
	BASE:targetIdx:흥분 += 9999
	BASE:targetIdx:흥분 = LIMIT(BASE:targetIdx:흥분, 0, MAXBASE:targetIdx:흥분)
	wait

; 피임약
@use902(targetIdx)
#dim dynamic targetIdx

	printFormL %CALLNAME:targetIdx%에게 %kr(ITEMNAME:902, "을", "를)% 사용했다.
	BASE:targetIdx:생리주기 = MAXBASE:MASTER:생리주기 / 4 - 1
	wait

; 사후피임약
@use903(targetIdx)
#dim dynamic targetIdx

	printFormL %CALLNAME:targetIdx%에게 %kr(ITEMNAME:903, "을", "를)% 사용했다.

	; 7일이내 2회이상 사용시 10% 확률로 생리불순
	if RAND:10 == 0 && (DAY < CFLAG:targetIdx:사후피임약복용 + 7)
		printFormL %kr(CALLNAME:targetIdx, "은", "는")% 잦은 사후피임약 복용으로 생리불순이 된 모양이다...
		TALENT:targetIdx:생리불순 = 1
	endif
	wait

