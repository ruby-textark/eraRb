@showMasterInfo
#dim page

$charaInfoLoop

	page = LIMIT(page, 0, 3)

	clearline 99999
	printForm 이름 : %NAME:MASTER%

	if TALENT:MASTER:남성 == 1
		SETCOLOR 0x00ff00
		printL ♂
		RESETCOLOR
	else
		SETCOLOR 0xff0000
		printL ♀
		RESETCOLOR
	endif

	barstr BASE:MASTER:체력, MAXBASE:MASTER:체력, 10
	printFormL 체력 : %results% ({BASE:MASTER:체력}/{MAXBASE:MASTER:체력})

	barstr BASE:MASTER:마력, MAXBASE:MASTER:마력, 10
	printFormL 마력 : %results% ({BASE:MASTER:마력}/{MAXBASE:MASTER:마력})

	printL ‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥

	if page == 0
		call showTalents
		call showMarks
		call showAbilities
		call showFameInfo
	elseif page == 1
		call showExperiences
	elseif page == 2
		call showBasicBodyInfo
	elseif page == 3
		call showDetailedBodyInfo
	endif

	printL ‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥
	
	printFormLC [901] - 이전 페이지로
	printFormL [902] - 다음 페이지로
	printFormLC [910] - 이름 변경
	printFOrmL [911] - 신체 부위명 설정
	printL [900] - 돌아가기
	
	input
	
	if result == 901
		page--
	elseif result == 902
		page++
	elseif result == 910
		call customizeName
	elseif result == 911
		call customizeBodyParts
	elseif result == 900
		return 1
	endif

	goto charaInfoLoop
