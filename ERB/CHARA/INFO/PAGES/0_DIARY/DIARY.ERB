@showDiary

	; todo 태생 설명 좀 더 추가
	if CFLAG:MASTER:태생 == 1
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			printFormL %NAME:MASTER%입니다. 얼마 전에 마탑을 졸업했어요.
		elseif CFLAG:MASTER:성격 == 3 || CFLAG:MASTER:성격 == 5
			printFormL %kr(NAME:MASTER, "이라고", "라고")% 해. 얼마 전에 마탑을 졸업했어.
		else
			printFormL %NAME:MASTER%...입니다... 얼마 전에 마탑을 졸업했어요...
		endif
	elseif CFLAG:MASTER:태생 == 2
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			printFormL 프리랜서 용병 %NAME:MASTER%이에요. 지명 의뢰는 %CALLNAME:MASTER% 이름으로 받고 있어요.
		elseif CFLAG:MASTER:성격 == 3
			printFormL 후후, 프리랜서 용병 %kr(NAME:MASTER, "이야", "야")%. 의뢰를 맡기고 싶으면 %CALLNAME:MASTER%에게 맡겨줘. 낮의 일도, 밤의 일도 모두 전문가니까.
		elseif CFLAG:MASTER:성격 == 4
			printFormL 프리랜서 용병 %NAME:MASTER%입니다... 의뢰는 %CALLNAME:MASTER% 이름 앞으로 받고 있습니다...
		else
			printFormL %NAME:MASTER%. 프리랜서 용병이다. 지명할 때는 %kr(CALLNAME:MASTER, "이라고", "라고")% 부르면 된다.
		endif
		
	elseif CFLAG:MASTER:태생 == 3
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			printFormL %kr(CALLNAME:MASTER, "이야", "야")%. 으응, 그, 종족은 서큐버스야, 일단.
		elseif CFLAG:MASTER:성격 == 3
			printFormL 안녕, %kr(CALLNAME:MASTER, "이야", "야")%. 종족은 서큐버스지만, 너무 겁 먹을 필요는 없어.
		elseif CFLAG:MASTER:성격 == 4
			printFormL %kr(CALLNAME:MASTER, "이야", "야")%... 종족은 서큐버스입니다. 잘 부탁드려요...
		else
			printFormL 이름 %CALLNAME:MASTER%. 서큐버스고, 이번 공동 전선에 대표로 참전했어.
		endif
	elseif CFLAG:MASTER:태생 == 4
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			printFormL 반가워요. %kr(CALLNAME:MASTER, "이라고", "라고")% 불러주세요. 헤헤.
		elseif CFLAG:MASTER:성격 == 3
			printFormL 후후. %kr(CALLNAME:MASTER, "이라고", "라고")% 해. 뭐? 본명? 그건 여자의 비밀이야.
		else
			printFormL 어. %kr(CALLNAME:MASTER, "이라고", "라고")% 해. 전생에는 %kr(NAME:MASTER, "이라는", "라는")% 이름이었지.
		endif
	elseif CFLAG:MASTER:태생 == 5
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			printFormL 반가워요. %kr(CALLNAME:MASTER, "이라고", "라고")% 불러주시면 감사하겠어요.
		elseif CFLAG:MASTER:성격 == 5
			printFormL 성녀 %CALLNAME:MASTER%입니다. 하늘의 가르침을 전달하기 위해 왔습니다.
		else
			printFormL %kr(CALLNAME:MASTER, "이라고", "라고")% 해요. 후후.
		endif
	endif

	if TALENT:MASTER:허벌보지
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("허벌보지", "그, 저기, 아래쪽 구멍이 좀 커진 것 같은데 이거 큰 문제는 없는거겠죠...?")
		else
			call showDiaryItem("허벌보지", @"조금 부끄러운 얘기지만, 요즘들어 %partStrRaw(121)%의 조임이 예전같지 않달까, 좀 느슨하달까...")
		endif
	endif
	
	if TALENT:MASTER:세로애널
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("세로애널", @"이건 진짜 비밀로 해주세요... 실은 그, 요새 %kr(partStrRaw(123), "이", "가")% 넓어져서... 딱 한번, 좀 흘려버렸어요.")
		else
			call showDiaryItem("세로애널", @"이런 말 해도 되나 모르겠는데, %partStrRaw(123)%에 의식적으로 힘을 주지 않으면 가끔 아찔할 때가 있어서 불편하네.")
		endif
	endif
	
	; todo 나머지 두가지
	if TALENT:MASTER:빈유
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("빈유", @"(%NAME:MASTER% 본인은 작은 가슴에 대해 별 생각이 없는 듯 하다)")
		elseif CFLAG:MASTER:성격 == 2
			call showDiaryItem("빈유", "그래도 조만간 커질 것 같은데... 요새 우유도 많이 마시고 있고.")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("빈유", "어머. 실례되는 소리를 아무렇지도 않게 하네. 뜨거운 맛 좀 보고 싶은가 봐?")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("빈유", "저... 저는 크면 오히려 불편하다고 생각해요... 아니라고요? 역시 그렇겠죠...")
		else
			call showDiaryItem("빈유", "아니, 뭐 좀 작을 수도 있지. 애초에 크기에 관계없이 그렇게 뚫어져라 쳐다보는건 예의가 아니지 않나?")
		endif
	elseif TALENT:MASTER:거유
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("거유", "히잉. 가슴이 너무 커서 불편해.")
		elseif CFLAG:MASTER:성격 == 2
			call showDiaryItem("거유", "(자랑스러운 표정으로 가슴을 앞으로 쭉 내밀고 있다)")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("거유", "음~ 계속 그렇게 보고만 있을거야? 아니면 직접 만져볼래?")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("거유", "역시 큰게 좋다고요? 헤헤... 저, 저도 그렇게 생각해요...")
		else
			call showDiaryItem("거유", "하여튼간에 남자란 것들은 다 똑같아서.")
		endif
	elseif TALENT:MASTER:빨래판
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("빨래판", @"(%NAME:MASTER% 본인은 작은 가슴에 대해 별 생각이 없는 듯 하다)")
		elseif CFLAG:MASTER:성격 == 2
			call showDiaryItem("빨래판", "흥. 커 봤자 싸울 땐 방해될 뿐이야.")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("빨래판", "죽고 싶니...? 당장 눈 안 치워?")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("빨래판", "차라리 안에 안 입어도 되니까... 편한 것 같기도 하고.")
		else
			call showDiaryItem("빨래판", "어딜 그렇게 쳐다보는거야? 나한테 보태준 거 있어?")
		endif
	elseif TALENT:MASTER:폭유
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("폭유", "요즘 자꾸 어깨가 아픈데, 가슴 때문에 그런걸까요?")
		elseif CFLAG:MASTER:성격 == 2
			call showDiaryItem("폭유", "아니, 뭐가 좋다고 그렇게들 바라보는 건지 모르겠네. ...싫은 건 아니지만.")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("폭유", "이런 매력도 무기 아니겠어? 하여튼 눈을 떼지도 못하는 모습들을 보면 꽤 귀엽다니까.")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("폭유", "그, 다들 시선이 너무 집중돼서. 조금 무섭다고 생각해.")
		else
			call showDiaryItem("폭유", "움직일 땐 좀 불편해도 여러모로 쓸만하긴 해.")
		endif
	endif

	; 임신도 아닌데 모유체질
	if TALENT:MASTER:모유체질 && !TALENT:MASTER:임신
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("모유체질", "음... 언제부터였는지는 모르겠는데 그냥 나오길래 그러려니 하고 살고 있어요.")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("모유체질", "어때. 마셔 보고 싶어?")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("모유체질", "으... 지금 안 샜죠? 자꾸 옷이 젖어서요...")
		else
			call showDiaryItem("모유체질", "하여튼간에 남자란 것들은 다 똑같아서.")
		endif
	; 임신해서 나오는 모유
	elseif TALENT:MASTER:임신 || MAXBASE:MASTER:모유 > 100
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("모유분비", @"그러니까, 마시고 싶다고 하셔도... 아기가 먹을 거리나까요. 아무리 그래도 안 되는건 안돼요.")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("모유분비", "어때. 마셔 보고 싶어? 대신 아기 몫은 남겨 줘.")
		elseif CFLAG:MASTER:성격 == 4
			call showDiaryItem("모유분비", "으... 지금 안 샜죠? 자꾸 옷이 젖어서요...")
		else
			call showDiaryItem("모유분비", "가슴이 눌리는 옷을 입기만 해도 자꾸 신경이 쓰이네. 나도 모르는 새 새어나올 때도 있어서 말이야.")
		endif
	endif
	
	; if BASE:MASTER:혈중알코올농도 > 25
		; call showDiaryItem("만취", "으헤에...")
	; elseif BASE:MASTER:혈중알코올농도 > 15
		; call showDiaryItem("취함", "히히. 좀 어지러운 것도 같고. 그냥 아무 이유 없이 신나!")
	; endif
	
	; if BASE:MASTER:요의 > MAXBASE:MASTER:요의 / 2
		; call showDiaryItem("요의", "어, 저기. 근처에 화장실이 어디 있더라...?")
	; endif
	
	if TALENT:MASTER:발정
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("발정", @"(%kr(CALLNAME:MASTER, "은", "는")% 자신이 무슨 상황에 처한지도 이해하지 못한 채 다리를 오므렸다 폈다 반복하며 달콤한 신음소리를 내고 있다)")
		elseif CFLAG:MASTER:성격 == 2 || CFLAG:MASTER:성격 == 4
			call showDiaryItem("발정", @"(%kr(CALLNAME:MASTER, "은", "는")% 안절부절 못하며 가랑이 사이에 손을 집어넣어 분주히 무언가에 열중하고 있다...)")
		else
			call showDiaryItem("발정", @"(%kr(CALLNAME:MASTER, "은", "는")% 물기에 젖은 눈빛으로 주위를 살피며 다리를 배배 꼬고 있다...)")
		endif
	endif

	if TALENT:MASTER:음란
		if CFLAG:MASTER:성격 == 1
			call showDiaryItem("음란", "이거 나쁜 거야? 에... 근데 기분 좋은데, 정말로 하면 안 되는걸까?")
		elseif CFLAG:MASTER:성격 == 2 || CFLAG:MASTER:성격 == 4
			call showDiaryItem("음란", "그... 역시 야한 아이는 좀 별로려나...? 그치만... 기분 좋은걸...")
		elseif CFLAG:MASTER:성격 == 3
			call showDiaryItem("음란", "으응? 뭐야. 너도 여기에 관심이 있는거야? 후후...")
		else
			call showDiaryItem("음란", "아, 어디 괜찮은 사람 있으면 확 덮치고 싶네.")
		endif
	endif
	
	if TALENT:MASTER:대범함
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("대범함", "맡겨만 줘요! 금방 해낼 수 있어요!")
		elseif CFLAG:MASTER:성격 == 3 || CFLAG:MASTER:성격 == 5
			call showDiaryItem("대범함", "뭐 의뢰라면 얼마든지 맡겨. 대신 시시한 잡일은 안 받을거야.")
		else
			call showDiaryItem("대범함", "나도 이 정도는... 할 수 있어.")
		endif
	endif

	if TALENT:MASTER:겁쟁이
		if CFLAG:MASTER:성격 == 1 || CFLAG:MASTER:성격 == 2
			call showDiaryItem("겁쟁이", "히익! 무, 무서운데... 꼭 싸워야 되는거에요?")
		elseif CFLAG:MASTER:성격 == 3 || CFLAG:MASTER:성격 == 5
			call showDiaryItem("겁쟁이", "와악! 까, 깜짝이야... 갑자기 불러서 놀랐잖아. 뭐? 의뢰? 좀 무서운데...")
		else
			call showDiaryItem("겁쟁이", "...!(엄청난 속도로 몸을 웅크린 채 바들바들 떨고 있다)")
		endif
	endif

@showDiaryItem(tag, text)
#dims dynamic tag
#dims dynamic text

	call colorPrint(0xff8000, @"[%tag%] ")
	printFormL %text%
