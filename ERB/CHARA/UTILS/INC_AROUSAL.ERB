
@calcArousalValue(partIdx, amount)
#function
#dim dynamic partIdx
#dim dynamic amount

	returnf amount * (ABL:MASTER:partIdx + 1) * (ABL:TARGET:성교기술 + 1)

@increaseArousal(partIdx, amount)
#dim dynamic partIdx
#dim dynamic amount

	PALAM:MASTER:partIdx += calcArousalValue(partIdx, amount)

	call checkOrgasm

; 전투중에는 PALAM의 직접 조작 대신 UP을 통하여 가감산을 진행하는것이 용이함
@increaseArousalToUp(partIdx, amount)
#dim dynamic partIdx
#dim dynamic amount
#dim dynamic upAmount

	upAmount = calcArousalValue(partIdx, amount)

	if FLAG:음욕의계약
		repeat FLAG:음욕의계약
			upAmount += upAmount / 5
		rend
	endif

	UP:partIdx += upAmount
