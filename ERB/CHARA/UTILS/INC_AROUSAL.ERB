
@calcArousalValue(partIdx, amount)
#function
#dim dynamic partIdx
#dim dynamic amount

	returnf amount * (ABL:MASTER:partIdx + 1) * (ABL:TARGET:성교기술 + 1)

@increaseArousal(partIdx, amount)
#dim dynamic partIdx
#dim dynamic amount

	PALAM:MASTER:partIdx += calcArousalValue(partIdx, amount)

	call checkOrgasm

; 전투중에는 PALAM의 직접 조작 대신 UP을 통하여 가감산을 진행하는것이 용이함
@increaseArousalToUp(partIdx, amount)
#dim dynamic partIdx
#dim dynamic amount

	if FLAG:음욕의계약
		UP:partIdx += FLAG:음욕의계약 * calcArousalValue(partIdx, amount) / 5
	endif

	UP:partIdx += calcArousalValue(partIdx, amount)
