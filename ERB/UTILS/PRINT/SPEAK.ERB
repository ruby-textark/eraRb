@speak(charaIdx, string)
#dim dynamic charaIdx
#dims dynamic string

	setColor CFLAG:charaIdx:대사색상

	if charaIdx == MASTER
		printForm %NAME:MASTER% : 
	else
		printForm %CALLNAME:charaIdx% %NAME:charaIdx% : 
	endif

	printFormW %string%
	resetColor

	; RESULT sideeffect때문에
	return RESULT

@speakNPC(npcNo, string)
#dim dynamic npcNo
#dims dynamic string
	
	call speak(getChara(npcNo), string)

	; RESULT sideeffect때문에
	return RESULT
