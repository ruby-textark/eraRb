@speak(charaIdx, string)
#dim dynamic charaIdx
#dims dynamic string

	setColor CFLAG:charaIdx:대사색상
	printFormW %string%
	resetColor

	; RESULT sideeffect때문에
	return RESULT

@speakNPC(npcNo, string)
#dim dynamic npcNo
#dims dynamic string
#dim dynamic charaIdx

	charaIdx = getChara(npcNo)
	
	call speak(charaIdx, @"%CALLNAME:charaIdx% %NAME:charaIdx% : %string%")

	; RESULT sideeffect때문에
	return RESULT

@speakNPCW(npcNo, string)
#dim dynamic npcNo
#dims dynamic string

	call speakNPC(npcNo, string)
	wait

	; RESULT sideeffect때문에
	return RESULT
