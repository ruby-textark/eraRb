@itemShop

	printL 어디로 갈까?
	printFormL [1] - 잡화점
	printFormL [2] - 장비점
	printFormL [3] - 도매상
	printFormL [4] - 마석 환전소
	printFormL [0] - 돌아가기

$inputLoop
	input
	
	if RESULT == 1
		call itemShopMenu(0, 99)
	elseif RESULT == 2
		call itemShopMenu(1000, 1999)
	elseif RESULT == 3
		call wholesale
	elseif RESULT == 4
		call tradeCenter
	elseif RESULT == 0
		return
	else
		call systemError("잘못된 입력입니다")
		clearLine 2
		goto inputLoop
	endif
