@itemShop

	printL 구매를 원하는 아이템 종류를 입력하세요
	printFormL [1] - 잡화
	printFormL [2] - 장비
	printFormL [0] - 돌아가기

$inputLoop
	input
	
	if RESULT == 1
		call itemShopMenu(0, 99)
	elseif RESULT == 2
		call itemShopMenu(1000, 1999)
	elseif RESULT == 0
		return
	else
		clearLine 1
		goto inputLoop
	endif

	
@itemShopMenu(startIdx, endIdx)
#dims dynamic itemString
#dim dynamic startIdx
#dim dynamic endIdx
#dim dynamic showCount
#dim dynamic itemIdx
#dim dynamic availableCount

$itemLoop
	showCount = 0
	clearLine 999
	for i, startIdx, endIdx
			if strlens(ITEMNAME:i) == 0
				continue
			endif
			
			itemString = [{i}] - %ITEMNAME:i% ({ITEMPRICE:i})
			
			printFormLC %itemString, 30, LEFT%
			showCount++
			if showCount % 4 == 0
				printL
			endif
		next

		printL
		printL [0] - 돌아가기

	input
	itemIdx = result
	
	if strlens(ITEMNAME:itemIdx) > 0
		if MONEY >= ITEMPRICE:itemIdx
			availableCount = MONEY / ITEMPRICE:itemIdx
			
			printFormL 구입할 개수를 입력하세요(1-{availableCount})
			print [0] - 돌아가기 [1] 1개
			if availableCount >= 10
				print [10] 10개
			endif
			if availableCount >= 100
				print [100] 100개
			endif
			printFormL [{availableCount}] 전부
			
$amountLoop
			input
			if MONEY < result * ITEMPRICE:itemIdx
				printL 돈이 부족합니다
				wait
				goto amountLoop
			else
				MONEY -= result * ITEMPRICE:itemIdx
				ITEM:itemIdx += result
				printFormL %kr(ITEMNAME:itemIdx, "을", "를")% 구입했습니다
			endif
		else
			printL 돈이 부족합니다
		endif
		wait
		goto itemLoop
	elseif itemIdx == 0
		return
	else
		goto itemLoop
	endif
