@startCustomization
	
	call customizeName

	printL 신체 선택
	printL [1] - 일반
	printL [2] - 그 외 모든 입력은 전신감도 + 1

	input
	if RESULT == 1
		printL 처음부터 조교하는게 또 꼴리긴 함 ㅇㅇ
	else
		printL 자위경험 + 50
		printL 모든 부위 감도 + 1LV
		
		EXP:MASTER:자위경험 += 50
		
		for i, 101, 199
			if strlens(BASENAME:i)
				ABL:MASTER:i++
			endif
		next
	endif
	wait
	
	printL 다음중 하나 선택
	printL [1] - 체력 + 500
	printL [2] - 마력 + 300
	printL [3] - 이상성욕
	printL [4] - 그 외 모든 입력은 특전 없이 진행
	
	input
	if RESULT == 1
		printL 체력 + 500으로 시작
		BASE:MASTER:체력 += 500
	elseif RESULT == 2
		printL 마력 + 300으로 시작
		BASE:MASTER:마력 += 500
	elseif RESULT == 3
		printL 이상성욕 1LV로 시작
		TALENT:MASTER:이상성욕 = 1
	else
		printL 그게 좋다면야 뭐
	endif
	wait

	printL 복장 선택
	printL [1] - 평상복 스타트
	printL [2] - 그 외의 입력은 전부 속옷만 입고 시작함 ㅅㄱ

	input
	
	if RESULT == 1
		printL 정상적으로 옷 입고 스타트
		ITEM:1201 = 1
		ITEM:1301 = 1
		ITEM:1401 = 1
	
		EQUIP:MASTER:상의 = 1201 ; 하얀셔츠
		EQUIP:MASTER:하의 = 1301 ; 스커트
		EQUIP:MASTER:신발 = 1401 ; 운동화
	else
		printL 옷이 없는 대신 돈 500원을 추가
		MONEY += 500
	endif

	ITEM:1501 = 1
	EQUIP:MASTER:속옷 = 1501 ; 보통속옷
	
	printL 설정 완료
	wait

@customizeName

	printL 이름을 입력(기본: 당신)
	inputs
	
	if strlens(results)
		NAME:MASTER = %results%
	endif

	printL 부를 이름 입력(기본: 당신)
	inputs
	
	if strlens(results)
		CALLNAME:MASTER = %results%
	endif
