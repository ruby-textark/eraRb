@itemOption908()
	RESULTS '= "[획득:모유체질]"

@itemExpl908()
	RESULTS '= "사용시 모유체질을 얻어, 임신 중이 아니어도 모유를 낼 수 있게 된다."

@isUsable908(targetIdx)
#dim dynamic targetIdx

	return targetIdx == MASTER

@onUseItem908(targetIdx)
#dim dynamic targetIdx

	printFormW %NAME:targetIdx%에게 %kr(ITEMNAME:908, "을", "를")% 사용했다.

	EXP:targetIdx:약물경험++
	TALENT:targetIdx:모유체질 = !TALENT:targetIdx:모유체질
	if TALENT:targetIdx:모유체질
		printFormW %kr(NAME:targetIdx, "은", "는")% [모유체질]을 획득했다.
	else
		printFormW %kr(NAME:targetIdx, "은", "는")% [모유체질]을 잃었다.
	endif
	
	MAXBASE:MASTER:모유 = MAX(100, MAXBASE:MASTER:모유)

	return 1

