@showInventory
#dim dynamic showCount

$inputLoop
	redraw 999
	printL =인벤토리=
	printL 사용하려는 아이템을 선택하세요

	showCount = 0
	for i, 1, 1500
	
		; No such item
		if strlens(ITEMNAME:i) == 0
			continue
		endif
		; Equipment
		if 101 <= i && i <= 999
		endif
			
		if ITEM:i
			printFormLC [{i}] %ITEMNAME:i, 14, RIGHT%x{ITEM:i, 3, LEFT}
			showCount++
			if showCount % 4 == 0
				printL
			endif
		endif
	
	next

	printL
	printL [0] - 돌아가기

	input

	if 101 <= result && result <= 199
		call useItem1xx(result)
	elseif 201 <= result && result <= 299
		call useItem2xx(result)
	elseif 301 <= result && result <= 399
		call useItem3xx(result)
	elseif 401 <= result && result <= 499
		call useItem4xx(result)
	elseif 501 <= result && result <= 599
		call useItem5xx(result)
	elseif 601 <= result && result <= 699
		call useItem6xx(result)
	elseif 701 <= result && result <= 799
		call useItem7xx(result)
	elseif 801 <= result && result <= 899
		call useItem8xx(result)
	elseif 901 <= result && result <= 999
		call useItem9xx(result)
	elseif result == 0
		return
	endif

	goto inputLoop
