@showInventory
#dim dynamic showCount

$inputLoop
	redraw 999
	printL =인벤토리=
	printL 사용하려는 아이템을 선택하세요

	showCount = 0
	for i, 1, 1500
	
		; No such item
		if strlens(ITEMNAME:i) == 0
			continue
		endif
		; Equipment
		if 101 <= i && i <= 999
		endif
			
		if ITEM:i
			printFormLC [{i}] %ITEMNAME:i, 14, RIGHT%x{ITEM:i, 3, LEFT}
			showCount++
			if showCount % 4 == 0
				printL
			endif
		endif
	
	next

	printL
	printL [0] - 돌아가기

	input

	if 101 <= result && result <= 999
		ITEM:result--
		callForm useItem{result}
	elseif result == 0
		return
	endif

	goto inputLoop
