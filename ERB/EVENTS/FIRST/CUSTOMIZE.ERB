@startCustomization
#dim dynamic partIdx

	call customizeName
	call customizeHistory

	printL 복장 선택
	printL [1] - 평상복 스타트
	printL [2] - 그 외의 입력은 전부 속옷만 입고 시작함 ㅅㄱ

	input
	
	if RESULT == 1
		printL 정상적으로 옷 입고 스타트
		ITEM:1201 = 1
		ITEM:1301 = 1
		ITEM:1401 = 1
	
		call changeMasterEquips(12, 1201) ; 하얀셔츠
		call changeMasterEquips(13, 1301) ; 스커트
		call changeMasterEquips(14, 1401) ; 운동화
	else
		printL 옷이 없는 대신 돈 500원을 추가
		MONEY += 500
	endif

	ITEM:1501 = 1
	call changeMasterEquips(15, 1501) ; 보통속옷
	
	printW 설정 완료

@customizeName

	printL 이름을 입력(기본: 당신)
	inputs
	
	if strlens(RESULTS)
		NAME:MASTER = %RESULTS%
	endif

	printL 부를 이름 입력(기본: 당신)
	inputs
	
	if strlens(RESULTS)
		CALLNAME:MASTER = %RESULTS%
	endif

@customizeHistory
#dim dynamic partIdx

	printL 태생 선택
	printL [1] - 마탑 졸업생 마녀
	printL       마력++ 마법공격++
	printL       체력-- 약물중독
	printL [2] - 길거리 출신 용병
	printL       체력+ 전투기술+ 소지금+
	printL       애널약점
	printL [3] - 견습 음마
	printL       성교기술++ 전신감도+ 흡정
	printL       정액중독 자궁벌어짐 음문각인
	printL [4] - TS 전생한 남자
	printL       가슴크기+ 질감도+ 클리감도+
	printL       자위중독

$inputHistory

	input
	if RESULT == 1
		printW [마탑 졸업생 마녀]로 게임을 시작합니다.

		BASE:MASTER:마력 += 600
		BASE:MASTER:체력 -= 500

		ABL:MASTER:마법공격 += 2
		
		EXP:MASTER:약물경험 = 10
		ABL:MASTER:약물중독 = 1
	elseif RESULT == 2
		printW [길거리 출신 용병]으로 게임을 시작합니다.
		BASE:MASTER:체력 += 250

		ABL:MASTER:전투기술 += 1
		TALENT:MASTER:애널약점 = 1
		MONEY += 2000
	elseif RESULT == 3
		printW [견습 음마]로 게임을 시작합니다.
		ABL:MASTER:성교기술 += 2
		ABL:MASTER:흡정 = 1

		for partIdx, 101, 200
			if strlens(BASENAME:partIdx)
				ABL:MASTER:partIdx++
			endif
		next
		
		EXP:MASTER:정액경험 = 10
		ABL:MASTER:정액중독 = 1
		
		TALENT:MASTER:자궁벌어짐 = 1
		MARK:MASTER:음문각인 = 1
	elseif RESULT == 4
		printW [TS 전생한 남자]로 게임을 시작합니다.
		BASE:MASTER:가슴둘레 += 50
		BASE:MASTER:가슴크기 += 30
		ABL:MASTER:질감도++
		ABL:MASTER:클리감도++

		EXP:MASTER:자위경험 = 10
		ABL:MASTER:자위중독 = 1
	else
		clearLine 1
		goto inputHistory
	endif
