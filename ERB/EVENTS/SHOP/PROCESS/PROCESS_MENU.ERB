@processMenu

	; This commands are always OK
	if RESULT != 201 && RESULT != 202 && RESULT < 800 || RESULT == 901
		if !isMasterFree()
			return 0
		endif
	endif

	; QUEST MENU
	if hasHuntQuest() && FLAG:자궁대여료 == 0 && RESULT == 101
		call startQuest
		RESULT = 0
	elseif !hasHuntQuest() && RESULT == 102
		call newQuestList
	elseif TARGET != 0 && RESULT == 103
		call cancelQuest
	elseif hasDeliverQuest() && hasDeliveryItems()
	
		ITEM:(FLAG:퀘스트대상) -= (FLAG:퀘스트값)
		call finishQuest

	; CHARACTER MENU
	elseif RESULT == 201
		call showMasterInfo
		RESULT = 0
	elseif RESULT == 202
		call showInventory
		RESULT = 0
	elseif RESULT == 203
		call showMasterEquips
		RESULT = 0
	elseif RESULT == 204
		call reincarnation
		RESULT = 0

	; SHOP MENU
	elseif RESULT == 301
		call itemShop
	elseif RESULT == 302
		call backStreet

	; SYSTEM MENU
	elseif RESULT == 801
		saveGame
		RESULT = 0
	elseif RESULT == 802
		loadGame
	elseif RESULT == 803
		call configMenu
		RESULT = 0

	; TURN END
	elseif RESULT == 900
		begin turnend
	elseif RESULT == 901 && MONEY >= 2000
		printFormW %kr(CALLNAME:MASTER, "은", "는")% 푹 쉬었다
		printFormW 숙박비 \\2000 차감
		
		MONEY -= 2000

		BASE:MASTER:체력 = MAXBASE:MASTER:체력
		BASE:MASTER:마력 = MAXBASE:MASTER:마력

		begin turnend
	; WRONG COMMAND
	else
		RESULT = 0
	endif

	return RESULT

@saveInfo
	PUTFORM {DAY,3,RIGHT}일차 %NAME:MASTER, 14, LEFT%
