@expedition
#dim dynamic randValue

	randValue = frand(100)

	if randValue < 60
		; 전투(60%)
		call startBattle
	elseif randValue < 80
		; 이로운방(20%)
		call goodRoom
	else
		; 해로운방(20%)
		call badRoom
	endif

@startBattle

	call addMonster(FLAG:미궁위치 * 100 + 1 + RAND:(FLAG:(100 + FLAG:미궁위치 * 10)))
	begin train

	return

