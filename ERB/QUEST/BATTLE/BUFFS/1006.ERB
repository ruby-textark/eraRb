@onBuff1006(charaIdx)
#dim dynamic charaIdx

	printFormL %CALLNAME:charaIdx%의 모습이 부풀었다
	TCVAR:charaIdx:공격력 += ABL:charaIdx:공격력
	TCVAR:charaIdx:방어력 += ABL:charaIdx:방어력

@progressBuff1006(charaIdx)
#dim dynamic charaIdx

@offBuff1006(charaIdx)
#dim dynamic charaIdx

	TCVAR:charaIdx:공격력 -= ABL:charaIdx:공격력
	TCVAR:charaIdx:방어력 -= ABL:charaIdx:방어력
