@applyBuffTo(charIdx, buffStr, buffTurn)
#dim dynamic charIdx
#dims dynamic buffStr
#dim dynamic buffTurn

	TCVAR:charIdx:buffStr += buffTurn
	callForm onBuff{getNum(TCVAR, buffStr)}(charIdx)

@hasBuff(charIdx, buffStr)
#function
#dim dynamic charIdx
#dims dynamic buffStr

	returnf TCVAR:charIdx:buffStr > 0
