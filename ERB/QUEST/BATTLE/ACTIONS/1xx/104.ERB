	return getAttackRange() > 1 && isTargetInRange()

@COM104
#dim dynamic advantage
#dim dynamic damageBase

	printW 달리면서 적을 노렸다
	
	if !checkAmmo() && !isSameLocation()
		printFormW 하지만 %kr(getAmmoName(), "이", "가")% 부족하여 실패했다...
		return 0
	endif
	
	TCVAR:MASTER:상하 = LIMIT(TCVAR:MASTER:상하 + TFLAG:전턴상하이동, -2, 2)
	TCVAR:MASTER:좌우 = LIMIT(TCVAR:MASTER:좌우 + TFLAG:전턴좌우이동, -2, 2)
	
	damageBase = 10 * MAX(2, getActualAtk(MASTER) + advantage - getActualDef(TARGET))

	; 10%확률로 빗나감
	if RAND:10 < 1
		printFormW 하지만 팔이 마음대로 움직이지 않아 공격이 빗나가고 말았다...
		damageBase = 0
	endif

	LOSEBASE:체력 = damageBase * 9 / 10 + RAND:(damageBase / 10)
	
	call useAmmo

	return 1
