@COM23
#dim dynamic damageBase

	printL 적에게 마구잡이로 주먹질했다
	
	if !isSameLocation()
		printFormL 하지만 %kr(getAmmoName(), "이", "가")% 부족하여 실패했다...
		return 0
	endif

	if RAND:10 < 2
		printL 빗나갔다!
		return 1
	endif
	
	damageBase = 10 * MAX(2, getActualAtk(MASTER) / 2 - getActualDef(TARGET))
	LOSEBASE:체력 = damageBase * 9 / 10 + RAND:(damageBase / 10)
	
	call useAmmo()

	return 1
