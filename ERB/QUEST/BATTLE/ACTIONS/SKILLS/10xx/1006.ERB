@COM_ABLE1006

	; 단검 착용시 사용가능
	return !isMasterDown() &&  isSkillAvailable(1006, "무기", 1601) && isTargetInRange()

@COM1006
#dim dynamic damageBase

	printFormL %kr(CALLNAME:MASTER, "은", "는")% 예리한 마력을 두른 무기로 적을 노린다
	
	if BASE:MASTER:마력 < 12
		printL 하지만 마력이 부족하여 실패했다...
		return 0
	endif

	BASE:MASTER:마력 -= 12

	; 피해량은 낮은 편
	damageBase = 6 * MAX(1, getActualAtk(MASTER) - getActualDef(TARGET))
	LOSEBASE:체력 = damageBase * 9 / 10 + RAND:(damageBase / 10)
	
	; 2-3턴간 중독
	call applyBuffTo(TARGET, "출혈", 2 + (RAND:2))

	return 1
