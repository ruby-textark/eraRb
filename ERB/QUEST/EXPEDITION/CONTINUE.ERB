	if RESULT == 0
		if FLAG:미궁위치 == 1
			FLAG:원정중 = 0
			begin shop
		else
			FLAG:미궁위치 -= 1
		endif
	elseif RESULT == 1
		; nop
		call expedition
	elseif RESULT == 2
		if FLAG:미궁위치 == 3
			call bossBattle
		else
			FLAG:미궁위치 += 1
		endif
	elseif RESULT == 3
		; 계약 체결은 턴 소모 없음
		call labyrinthContract
		return 0
	elseif RESULT == 4
		call expeditionTurnEnd
	else
		return 0
	endif

	return 1

