@continueExpeditionHandleResult
	
	if RESULT == 0
		if !FLAG:미궁상층발견
			printW 미궁의 상층으로 가는 길을 발견하지 못했습니다
			return 0
		endif

		if FLAG:미궁위치 == 1
			FLAG:원정중 = 0

			printW 원정을 종료합니다

			begin shop
		else
			FLAG:미궁위치 -= 1
			FLAG:미궁상층발견 = 0
			FLAG:미궁하층발견 = 1
			FLAG:미궁현재층탐색수 = 0

			call showLabyrinthFloor()
			printFormW %krPost(labyrinthFloorText(), "으로", "로")% 이동했다
		endif
	elseif RESULT == 1
		; nop
		call expedition
	elseif RESULT == 2
		if !FLAG:미궁하층발견
			printW 아직 미궁의 하층으로 가는 길을 발견하지 못했습니다
			return 0
		endif

		if FLAG:미궁위치 == 3
			call bossBattle
		else
			FLAG:미궁위치 += 1
			FLAG:미궁상층발견 = 1
			FLAG:미궁하층발견 = 0
			FLAG:미궁현재층탐색수 = 0
			
			call showLabyrinthFloor()
			printFormW %krPost(labyrinthFloorText(), "으로", "로")% 이동했다
		endif
	elseif RESULT == 3
		; 계약 체결은 턴 소모 없음
		call labyrinthContract
		return 0
	elseif RESULT == 4
		call expeditionTurnEnd
	else
		return 0
	endif

	return 1
