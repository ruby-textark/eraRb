@stepQuest

	if !FLAG:퀘스트진행중
		return
	endif
	
	if FLAG:퀘스트종류 == 0
		call systemNotify(@"%csvCallname(FLAG:퀘스트대상)%의 토벌에 성공했습니다.")
		
		FLAG:퀘스트값 -= 1
		
		if FLAG:퀘스트값 == 0
			FLAG:퀘스트진행중 = 0
		endif

	elseif FLAG:퀘스트종류 == 1
		call systemNotify(@"%ITEMNAME:(FLAG:퀘스트대상)%을 납품했습니다.")
		FLAG:퀘스트진행중 = 0
	endif

	if !FLAG:퀘스트진행중
		call finishQuest
	endif
